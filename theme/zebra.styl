// Simple
// 斑码

article
  text-align justify
  word-break break-all
  & > p
    text-indent 2em

li
p
  color #304455 

h1
  border-bottom 2px solid #eee 

h2
  border-bottom 1px solid #eee 

h3:before
  content '#'
  margin-right 10px
  color #1890ff 

h4:before
  content '##'
  margin-right 10px
  color #1890ff 

pre code
  font-size 1em 

blockquote p
  color #999

code
  border-radius 6px
  color #d63200
  font-size .9em 
